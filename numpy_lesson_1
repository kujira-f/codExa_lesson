In [4]: a = np.array([[1,2,3],[4,5,6]])                                         

In [5]: b = np.array([[1,2,3],[4,5,6]])                                         

In [6]: a                                                                       
Out[6]: 
array([[1, 2, 3],
       [4, 5, 6]])

In [7]: b                                                                       
Out[7]: 
array([[1, 2, 3],
       [4, 5, 6]])

In [8]: a + b                                                                   
Out[8]: 
array([[ 2,  4,  6],
       [ 8, 10, 12]])

In [9]: a - b                                                                   
Out[9]: 
array([[0, 0, 0],
       [0, 0, 0]])

In [10]: a * b                                                                  
Out[10]: 
array([[ 1,  4,  9],
       [16, 25, 36]])

In [11]: a * 2                                                                  
Out[11]: 
array([[ 2,  4,  6],
       [ 8, 10, 12]])

In [12]: a ** 2                                                                 
Out[12]: 
array([[ 1,  4,  9],
       [16, 25, 36]])

In [13]: a / 2                                                                  
Out[13]: 
array([[0.5, 1. , 1.5],
       [2. , 2.5, 3. ]])

In [14]: a < 2                                                                  
Out[14]: 
array([[ True, False, False],
       [False, False, False]])

In [15]: array = np.array([1,2,3])                                              

In [16]: list = [1,2,3]                                                         

In [17]: array                                                                  
Out[17]: array([1, 2, 3])

In [18]: list                                                                   
Out[18]: [1, 2, 3]

In [19]: list + [4]                                                             
Out[19]: [1, 2, 3, 4]

In [20]: array + [4]                                                            
Out[20]: array([5, 6, 7])

In [21]: list * 2                                                               
Out[21]: [1, 2, 3, 1, 2, 3]

In [22]: array * 2                                                              
Out[22]: array([2, 4, 6])

                                                           
